<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GIBDD_modile_new.MainPage">

    <ScrollView>
        <StackLayout>
            <Frame BackgroundColor="YellowGreen" Padding="24" CornerRadius="0">
                <Label Text="ГИБДД" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            <Image  x:Name="image1"  VerticalOptions="Fill" HorizontalOptions="Fill"></Image>
            <Label Text="Выберите дальнейшее действие"  FontSize="Medium" TextColor="Black"  Padding="30,10,30,10"/>
            <Button x:Name="BtnGuest" Text="Войти как гость" Clicked="BtnGuest_Clicked" Margin="30,10,30,10" FontSize="18"></Button>
            <Button x:Name="BtnLogin" Text="Войти как пациет" Clicked="BtnLogin_Clicked" Margin="30,10,30,10" FontSize="18"></Button>
            
        </StackLayout>
    </ScrollView>

</ContentPage>
